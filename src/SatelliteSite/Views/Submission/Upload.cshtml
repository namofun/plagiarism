@{
    ViewData["Title"] = "Upload";
}

<form asp-action="Upload" enctype="multipart/form-data" method="post" onsubmit="ajaxpost(this,'m-upload','upload');return false">
    <div class="modal fade" id="modal-upload" tabindex="-1" role="dialog" aria-labelledby="modal-upload-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-upload-label">@ViewData["Title"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <select name="lang">
                            <option value="C#8">C#</option>
                            <option value="C++14">C++</option>
                        </select>
                        <input name="uid" value="U001" hidden />
                        <label id="InputContent"></label>
                        <div class="custom-file">
                            <input name="FileUpload" type="file" class="custom-file-input" id="inputFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                    <div class="upload-progress"><div></div></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Begin</button>
                </div>
            </div>
        </div>
    </div>
</form>
